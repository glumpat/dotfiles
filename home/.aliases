# Files
alias aliases="nvim ~/.aliases"
alias zshrc="nvim ~/.zshrc"
alias vimrc="nvim ~/.vimrc"
alias config="nvim ~/.vim/config.vim"
alias shared="nvim ~/.vim/shared.vim"
alias ideavimrc="nvim ~/.ideavimrc"

# Wiki
alias todo="nvim ~/Documents/wiki/tasks.md"
alias work="nvim ~/Documents/wiki/work.md"
alias work/="nvim ~/Documents/wiki/work/"
alias note="nvim ~/Documents/wiki/scratchpad.md"
alias notes="nvim ~/Documents/wiki/notes/"
alias diary="nvim ~/Documents/wiki/diary/diary.md"
alias goals="nvim ~/Documents/wiki/goals/goals.md"
alias wiki="nvim ~/Documents/wiki/home.md"

## Lists
alias lists="nvim ~/Documents/wiki/lists/"
alias media="nvim ~/Documents/wiki/lists/media.md"
alias ideas="nvim ~/Documents/wiki/lists/ideas.md"
alias places="nvim ~/Documents/wiki/lists/places.md"

# Homeshick
alias hcd="homeshick cd dotfiles"
alias hpd="homeshick pull dotfiles"
alias hld="homeshick link dotfiles"
alias htd="homeshick track dotfiles"

# Git
alias gmd="git merge develop"
alias gaacm="git add -A && git commit -m"

# Docker
alias dcu="docker-compose up"
alias dcd="docker-compose down"
alias dca="docker-compose start"
alias dco="docker-compose stop"

# Pomodoro
alias pos="pomo start"
alias pop="pomo pause"
alias por="pomo restart"
alias pot="pomo stop"

alias zo='__zoxide_zi'

# Directories
alias dl="cd ~/Downloads"
alias src="cd ~/Source"
alias mt="cd ~/Source/meister/meistertask"
alias mth="cd ~/Source/meister/meistertask-helm"
alias mtw="cd ~/Source/meister/meistertask-web"
alias mm="cd ~/Source/meister/mindmeister"

# Close terminal window
alias :q='exit'

# Other
alias -g ...='../..'
alias -g ....='../../..'
alias -- -='cd -'
alias ll='ls -lh'
alias la='ls -lAh'
