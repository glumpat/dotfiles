# Files
alias aliases="vim ~/.aliases"
alias zshrc="vim ~/.zshrc"
alias vimrc="vim ~/.vimrc"
alias config="vim ~/.vim/config.vim"
alias shared="vim ~/.vim/shared.vim"
alias ideavimrc="vim ~/.ideavimrc"

# Wiki
alias todo="vim ~/Documents/wiki/tasks.md"
alias work="vim ~/Documents/wiki/work.md"
alias work/="vim ~/Documents/wiki/work/"
alias note="vim ~/Documents/wiki/scratchpad.md"
alias notes="vim ~/Documents/wiki/notes/"
alias diary="vim ~/Documents/wiki/diary/diary.md"
alias goals="vim ~/Documents/wiki/goals/goals.md"
alias wiki="vim ~/Documents/wiki/home.md"

## Lists
alias lists="vim ~/Documents/wiki/lists/"
alias media="vim ~/Documents/wiki/lists/media.md"
alias ideas="vim ~/Documents/wiki/lists/ideas.md"
alias places="vim ~/Documents/wiki/lists/places.md"

# Homeshick
alias hcd="homeshick cd dotfiles"
alias hpd="homeshick pull dotfiles"
alias hld="homeshick link dotfiles"
alias htd="homeshick track dotfiles"

# Git
alias gmd="git merge develop"
alias gaacm="git add -A && git commit -m"

# Docker
alias dcu="docker-compose up"
alias dcd="docker-compose down"
alias dca="docker-compose start"
alias dco="docker-compose stop"

# Zapier
alias zd="zapier describe"
alias ze="zapier env"
alias zeg="zapier env:get"
alias zes="zapier env:set"
alias zhist="zapier history"
alias zp="zapier push"
alias zpro="zapier promote"
alias zt="zapier test"
alias zua="zapier users:add"
alias zul="zapier users:links"
alias zup="zapier upload"
alias zur="zapier users:links"
alias zv="zapier validate"
alias zver="zapier versions"

# Pomodoro
alias posta="pomo start"
alias pop="pomo pause"
alias por="pomo restart"
alias posto="pomo stop"

# Directories
alias dl="cd ~/Downloads"
alias src="cd ~/Source"
alias mt="cd ~/Source/work/meistertask"
alias mth="cd ~/Source/work/meistertask-helm"
alias mtw="cd ~/Source/work/meistertask-web"
alias mm="cd ~/Source/work/mindmeister"

# Close terminal window
alias :q='exit'

# Other
alias -g ...='../..'
alias -g ....='../../..'
alias -- -='cd -'
alias ll='ls -lh'
alias la='ls -lAh'
